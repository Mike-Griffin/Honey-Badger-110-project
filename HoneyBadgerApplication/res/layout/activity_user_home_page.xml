<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
     android:background="@drawable/bg5"
     
    
    tools:context="com.example.honeybadgerapp.AccountInfo" >

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="75dp" >

            <TableLayout
                android:id="@+id/accountTable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
            </TableLayout>
        </ScrollView>

        <Button
            android:id="@+id/accountTransferButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/closeAccountButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_background_selector"
            android:text="@string/account_tranfer_button"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/closeAccountButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_background_selector"
            android:text="@string/close_account_button"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/transactionHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/accountTransferButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_background_selector"
            android:text="@string/transaction_history_button"
            android:textColor="#FFFFFF" />

    </RelativeLayout>

</RelativeLayout>